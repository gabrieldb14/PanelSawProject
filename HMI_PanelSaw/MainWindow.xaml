<Window x:Class="HMI_PanelSaw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Panel Saw HMI"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize" 
        d:DesignHeight="1080" d:DesignWidth="1920"
        KeyDown="Window_KeyDown">

    <Viewbox Stretch="Uniform">
        <Grid x:Name="MainWindow1" Background="#FF9F9F9F" Width="1920" Height="1080">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!--Minimize Button-->
                <Button x:Name="btnMinimizeWindow" Grid.Column="0" Width="50" Height="50" HorizontalAlignment="Left" Margin="10,0,0,0" Content="__" IsCancel="False" FontSize="36" Click="BtnMinimizeWindow_Click" FontWeight="Bold" ToolTip="Minimize window"/>
                
                <!--Close Button-->
                <Button x:Name="btnCloseWindow" Grid.Column="1" Width="50" Height="50" HorizontalAlignment="Left" Margin="10,0,0,0" Content="X" IsCancel="False" FontSize="36" FontWeight="Bold" Click="BtnCloseWindow_Click"/>
                
                <!--Settings Button-->
                <Button Grid.Column="2" x:Name="btnSettings" Click="BtnSettings_Click" Background="#FFD9D9D9" VerticalContentAlignment="Bottom" 
            FontWeight="Bold" FontSize="16" Height="50" Width="50" Margin="10,0,0,0">
                    <StackPanel Orientation="Vertical" Width="50" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Media/Settings.png" Stretch="Fill" 
                   HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="45" Height="45" VerticalAlignment="Center" Margin="0,3,0,0">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </StackPanel>
                </Button>
               
                <!--User Info-->
                <Grid x:Name="UserInfo" Grid.Column="3" Margin="10,5,0,5" HorizontalAlignment="Left" Width="300">
                    <Border BorderBrush="Black" BorderThickness="2" Background="#B6B6B6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="USER:" Foreground="#000000" FontSize="20" 
                               Margin="5,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" x:Name="txtCurrentUser" Text="Not Logged In" 
                               Foreground="Black" FontSize="20" Margin="0,0,5,0" 
                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                <Button Grid.Column="2" x:Name="btnLogout" Content="Logout" Width="50" Height="30" 
                            Margin="0,0,5,0" FontSize="12" Click="BtnLogout_Click"/>
                        </Grid>
                    </Border>
                </Grid>
                </Grid>
            
            <!-- Top Status Bar -->
            <Grid x:Name="StatusBar" Grid.Row="0" Margin="0,5,30,5" HorizontalAlignment="Right" Width="700">
                <Border BorderBrush="Black" BorderThickness="2" Background="#B6B6B6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="STATUS:" Foreground="#000000" FontSize="20" 
                                   Margin="5,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" x:Name="txtStatus" Text="READY" Foreground="Black" 
                                   FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center" 
                                   TextTrimming="CharacterEllipsis" Background="#B6B6B6" 
                                   HorizontalAlignment="Stretch"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Area - ContentControl for dynamic views -->
            <Border x:Name="MainArea" Grid.Row="1" BorderBrush="Gray" BorderThickness="2" Background="#FF9F9F9F">
                <ContentControl x:Name="ContentArea"/>
            </Border>

            <!-- Bottom Navigation Bar -->
            <Grid x:Name="BottomBar" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side - Main Navigation Buttons -->
                <Grid x:Name="ControlButtons">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>

                    </Grid.ColumnDefinitions>
                    
                    <!--Home Button-->
                    <Button Grid.Column="0" x:Name="btnHome" Click="BtnHome_Click" Width="90" Height="90" 
                                Margin="5" Background="#FFD9D9D9" VerticalContentAlignment="Bottom" 
                                FontWeight="Bold" FontSize="16">
                            <StackPanel Orientation="Vertical">
                                <Image Source="/Media/Home.png" Stretch="None" VerticalAlignment="Top" 
                                       HorizontalAlignment="Center"/>
                                <Label Content="F1" Margin="0,-2,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    
                    <!--Parameters Button-->
                    <Button Grid.Column="1" x:Name="btnParameters" Click="BtnParameters_Click" Width="90" Height="90" 
                                Margin="5" Background="#FFD9D9D9" VerticalContentAlignment="Bottom" 
                                FontWeight="Bold" FontSize="16">
                        <StackPanel Orientation="Vertical">
                            <Image Source="/Media/Parameters.png" Stretch="None" VerticalAlignment="Top" 
                                       HorizontalAlignment="Center"/>
                            <Label Content="F2" Margin="0,-2,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!--Start Cycle Button-->
                    <Button Grid.Column="2" x:Name="btnStartCycle" Click="BtnStartCycle_Click" Width="90" Height="90" 
                                Margin="5" Background="#FFD9D9D9" VerticalContentAlignment="Bottom" 
                                FontWeight="Bold" FontSize="16">
                        <StackPanel Orientation="Vertical">
                            <Image Source="/Media/StartCycle.png" Stretch="None" VerticalAlignment="Top" 
                                       HorizontalAlignment="Center"/>
                            <Label Content="F5" Margin="0,-2,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!--Stop Cycle Button-->
                    <Button Grid.Column="3" x:Name="btnStopCycle" Click="BtnStopCycle_Click" Width="90" Height="90" 
                                Margin="5" Background="#FFD9D9D9" VerticalContentAlignment="Bottom" 
                                FontWeight="Bold" FontSize="16">
                        <StackPanel Orientation="Vertical">
                            <Image Source="/Media/StopCycle.png" Stretch="None" VerticalAlignment="Top" 
                                       HorizontalAlignment="Center"/>
                            <Label Content="F6" Margin="0,-2,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!--Air table Button-->
                    <Button Grid.Column="5" x:Name="btnAirTable" Click="BtnAirTable_Click" Width="90" Height="90" 
                            Background="#FFD9D9D9" VerticalContentAlignment="Bottom" 
                            FontWeight="Bold" FontSize="16" Margin="5,5,5,5">
                        <StackPanel Orientation="Vertical">
                            <Image Source="/Media/AirTable.png" RenderTransformOrigin="0.5,0.5" Width="53" Height="53" >
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                            <Label Content="Air Table" Margin="0,-2,0,0"/>
                        </StackPanel>
                    </Button>
                    
                    <!--Safety Fences Button-->
                    <Button Grid.Column="6" x:Name="btnSafetyFences" Click="BtnSafetyFences_Click" Width="90" Height="90" 
                        Background="#FFD9D9D9" VerticalContentAlignment="Bottom" 
                        FontWeight="Bold" FontSize="16" Margin="5,5,5,5">
                        <StackPanel Orientation="Vertical">
                            <Image Source="/Media/SafetyFences.png" RenderTransformOrigin="0.5,0.5" Width="53" Height="53" />
                            <Label Content="Fences" Margin="0,-2,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
                
                <!-- Right Side - Emergency Buttons -->
                <StackPanel x:Name="EmergencyButtons" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" 
                            VerticalAlignment="Center" Margin="0,0,5,0">
                    <TextBlock x:Name="AppVersion" Text="v0.62" VerticalAlignment="Bottom"/>
                    <!--Emergency Reset Button-->
                    <Button x:Name="btnEmergencyReset" Click="BtnEmergencyReset_Click" Width="90" Height="90" 
                            Margin="5" Background="#FFD9D9D9" VerticalContentAlignment="Bottom" 
                            FontWeight="Bold" FontSize="16">
                        <StackPanel Orientation="Vertical">
                            <Image Source="/Media/EmergencyReset.png" Stretch="None" VerticalAlignment="Top" 
                                   HorizontalAlignment="Center"/>
                            <Label Content="F11" Margin="0,-2,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!--Emergency Button-->
                    <Button x:Name="btnEmergency" Click="BtnEmergency_Click" Width="90" Height="90" 
                            Margin="5" Background="#FFD9D9D9" VerticalContentAlignment="Bottom" 
                            FontWeight="Bold" FontSize="16">
                        <StackPanel Orientation="Vertical">
                            <Image Source="/Media/Emergency.png" Stretch="None" VerticalAlignment="Top" 
                                   HorizontalAlignment="Center"/>
                            <Label Content="F12" Margin="0,-2,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

        </Grid>
    </Viewbox>
</Window>
