<UserControl x:Class="HMI_PanelSaw.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HMI_PanelSaw.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Settings " FontSize="32" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Right"/>
        <Border Grid.Column="0" Grid.Row="1" BorderBrush="#555" BorderThickness="2" Background="#b6b6b6" Margin="10,10,10,10" CornerRadius="5">
            
         <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="User Info" FontSize="30" Margin="20,0,0,10" Foreground="#333" FontWeight="Bold"/>
                <!--User Info Panel-->
                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="#555" BorderThickness="2" Background="#b6b6b6"  CornerRadius="5" HorizontalAlignment="Left" Margin="20,0,0,0" Width="700" VerticalAlignment="Top">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!--User Info-->
                        <TextBlock Grid.Row="0" Grid.Column="0" x:Name="txtUserId" Text="Id: " FontSize="20" Foreground="#333" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" x:Name="txtUserUsername" Text="Username: " FontSize="20" Foreground="#333" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" x:Name="txtUserRole" Text="Role: " FontSize="20" Foreground="#333" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="3" Grid.Column="0"  x:Name="txtUserCreatedAt"  Text="Created At: " FontSize="20" Foreground="#333" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" x:Name="txtUserLastLogin" Text="Last Login At: " FontSize="20" Foreground="#333" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <!--User picture for future implementation-->
                        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" BorderBrush="#555" BorderThickness="3" Background="#b6b6b6" CornerRadius="10">
                            <StackPanel Background="#FF9F9F9F">
                                <Image Source="/Media/Avatar.png" HorizontalAlignment="Right" Margin="10" Stretch="None"/>
                            </StackPanel>
                        </Border>
                        <Button Grid.Row="5" Grid.Column="1" Content="Edit User" FontSize="18" FontWeight="Bold" Foreground="#333" Width="180" Height="50" HorizontalAlignment="Right" Margin="0,0,20,10" Click="Button_Click"/>
                    </Grid>
                </Border>
                <!--End of User Info Panel-->
             
            </Grid>   
            
        </Border>
        <Border Grid.Column="1" Grid.Row="1" BorderBrush="#555" BorderThickness="2" Background="#b6b6b6" Margin="10,10,10,10" CornerRadius="5">
         <Grid>
            
        </Grid>   
        </Border>
        
    </Grid>
</UserControl>
