<Window x:Class="HMI_PanelSaw.Views.PasswordChangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="459" Width="473" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" 
        Background="#FF9F9F9F" KeyDown="Window_KeyDown">

    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Change Password" FontSize="24" FontWeight="Bold" 
                   Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="Username:" FontSize="20" Foreground="#333"/>
            <TextBox x:Name="txtUsername" Height="30" FontSize="20" IsReadOnly="True" 
                     Background="#F0F0F0"/>
        </StackPanel>

        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="Current Password:" FontSize="20" Foreground="#333"/>
            <PasswordBox x:Name="txtCurrentPassword" Height="30" FontSize="20"/>
        </StackPanel>

        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="New Password:" FontSize="20" Foreground="#333"/>
            <PasswordBox x:Name="txtNewPassword" Height="30" FontSize="20"/>
        </StackPanel>

        <StackPanel Margin="0,0,0,15">
            <TextBlock Text="Confirm New Password:" FontSize="20" Foreground="#333"/>
            <PasswordBox x:Name="txtConfirmPassword" Height="30" FontSize="20"/>
        </StackPanel>

        <TextBlock x:Name="lblError" Foreground="Red" TextWrapping="Wrap" 
                   Margin="0,0,0,15" MinHeight="20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnChange" Content="Change Password" Width="Auto" Height="35" 
                    Margin="0,0,10,0" Click="BtnChange_Click" FontSize="20" Padding="5"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="Auto" Height="35" 
                    Click="BtnCancel_Click" FontSize="20" Padding="5"/>
        </StackPanel>
    </StackPanel>
</Window>