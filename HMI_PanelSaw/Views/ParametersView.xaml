<UserControl x:Class="HMI_PanelSaw.Views.ParametersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HMI_PanelSaw.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920"
             Background="#FF9F9F9F">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <!--Grid row 0 only for title -->
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Left Side-->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Machine Parameters" FontSize="32" FontWeight="Bold" Foreground="#333" Margin="20,15,0,0"/>
        <!--Wood Panel Parameters-->
        <Grid Grid.Row="1" Margin="10,10,14,10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Wood Panel Parameters" Grid.Row="0" FontSize="24" Margin="10" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="Panel length(mm):" Grid.Row="1" VerticalAlignment="Center" FontSize="20" Margin="10"/>
            <TextBox x:Name="txtPanelLength" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Height="40" FontSize="18" Padding="5" Margin="5" />

            <TextBlock Text="Panel width(mm):" Grid.Row="2" VerticalAlignment="Center" FontSize="20" Margin="10"/>
            <TextBox x:Name="txtPanelWidth" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Height="40" FontSize="18" Padding="5" Margin="5" />

            <TextBlock Text="Panel Thickness(mm):" Grid.Row="3" VerticalAlignment="Center" FontSize="20" Margin="10"/>
            <TextBox x:Name="txtPanelThickness" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Height="40" FontSize="18" Padding="5" Margin="5" />
        </Grid>
        <!--Main Blade Parameters-->
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Text="Main Blade Parameters" FontSize="24" Margin="10" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Blade Diameter(mm)" VerticalAlignment="Center" FontSize="20" Margin="10,0,10,0" Grid.ColumnSpan="2"/>
            <TextBox x:Name="txtMainBladeDiameter" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Height="40" FontSize="18" Padding="5" Margin="5,0,5,0"/>
            
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Blade Thickness(mm)" VerticalAlignment="Center" FontSize="20" Margin="10,0,10,0" Grid.ColumnSpan="2"/>
            <TextBox x:Name="txtMainBladeThickness" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Height="40" FontSize="18" Padding="5" Margin="5,0,5,0"/>
            
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Blade Type:" VerticalAlignment="Center" FontSize="20" Margin="10,0,10,0" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="cmbMainBlade" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Height="40" FontSize="18" Padding="5" Margin="5,0,5,0">
                <ComboBoxItem Content="Standard"/>
                <ComboBoxItem Content="TCT" IsSelected="True"/>
                <ComboBoxItem Content="Diamond"/>
            </ComboBox>
        </Grid>
        <!--Scoring Blade Parameters-->
        <Grid Grid.Row="3" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Text="Scoring Blade Parameters" FontSize="24" FontWeight="Bold" Margin="10" Foreground="#333"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Blade Diameter(mm)" VerticalAlignment="Center" FontSize="20" Margin="10"/>
            <TextBox x:Name="txtScoringBladeDiameter" Grid.Row="1" Grid.Column="1" FontSize="18" Padding="5" Margin="5" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Blade Thickness(mm)" VerticalAlignment="Center" FontSize="20" Margin="10"/>
            <TextBox x:Name="txtScoringBladeThickness" Grid.Row="2" Grid.Column="1" FontSize="18" Padding="5" Margin="5" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Blade Type: " VerticalAlignment="Center" Height="40" FontSize="18" Padding="5" Margin="5" />
            <ComboBox x:Name="cmbScoringBlade" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Height="40" FontSize="18" Padding="5" Margin="5,0,5,0">
                <ComboBoxItem Content="Standard" IsSelected="True"/>
                <ComboBoxItem Content="TCT"/>
                <ComboBoxItem Content="Diamond"/>
            </ComboBox>
        </Grid>
        <!--End of Left Side-->
        <!--Right Side-->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="#555" BorderThickness="2" Background="#b6b6b6" Margin="10,10,30,10" CornerRadius="5" Width="700" HorizontalAlignment="Right">
            <Grid Grid.Row="1" Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" x:Name="txtUserId" Text="Id: " FontSize="20" Foreground="#333" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="0" x:Name="txtUserUsername" Text="Username: " FontSize="20" Foreground="#333" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Grid.Column="0" x:Name="txtUserRole" Text="Role: " FontSize="20" Foreground="#333" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Grid.Column="0"  x:Name="txtUserCreatedAt"  Text="Created At: " FontSize="20" Foreground="#333" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="4" Grid.Column="0" x:Name="txtUserLastLogin" Text="Last Login At: " FontSize="20" Foreground="#333" VerticalAlignment="Center"/>
                    <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" BorderBrush="#555" BorderThickness="3" Background="#b6b6b6" CornerRadius="10">
                        <StackPanel Background="#FF9F9F9F">
                            <Image Source="/Media/Avatar.png" HorizontalAlignment="Right" Margin="10" Stretch="None"/>
                        </StackPanel>
                    </Border>
            </Grid>
        </Border>
        <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" 
                 VerticalAlignment="Bottom" Margin="0,0,30,30">
            <Button x:Name="btnLoadParameters" Content="LOAD FROM PLC" 
                 Width="180" Height="60" FontSize="18" FontWeight="Bold" 
                 Background="#D9D9D9" Foreground="#333" Margin="10" 
                 Click="BtnLoadParameters_Click"/>
            <Button x:Name="btnSaveParameters" Content="SAVE TO PLC" 
                 Width="180" Height="60" FontSize="18" FontWeight="Bold" 
                 Background="Red" Foreground="White" Margin="10" 
                 Click="BtnSaveParameters_Click"/>
        </StackPanel>
        <!--End of Right Side-->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="User Info" FontSize="32" FontWeight="Bold" Foreground="#333" Margin="0 15 30 0" HorizontalAlignment="Right"/>

    </Grid>
        
</UserControl>
